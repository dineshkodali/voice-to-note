{
    "buildCommand": "npm install --prefix client && npm run build --prefix client",
    "outputDirectory": "client/dist",
    "cleanUrls": true,
    "framework": "vite",
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index.js"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}